<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:transcriptor"
        xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="transcriptor.MainWindow"
        mc:Ignorable="d"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Transcriptor" Width="400" Height="397" Icon="favicon.ico" ResizeMode="CanMinimize">



    <Grid Margin="10">
        <Button x:Name="but" Content="Выполнить" Margin="0,0,10,14" Width="120" Click="But_Click_1" Height="32" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Bottom" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="combo"
            Margin="10,0,0,14" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="85" Height="32" SelectedIndex="1">
            <ComboBoxItem>
                Ru->En
            </ComboBoxItem>
            <ComboBoxItem>
                En->Ru
            </ComboBoxItem>

        </ComboBox>
        <Label x:Name="label" Content="Символов: " HorizontalAlignment="Right" Margin="0,0,10,69" VerticalAlignment="Bottom" Width="120" Height="23" VerticalContentAlignment="Center"/>
        <TextBox x:Name="text"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Вставьте эльфийский сюда"
    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}" Margin="10,10,10,112" />
        <ToggleButton x:Name="toggle"
  Style="{StaticResource MaterialDesignSwitchToggleButton}"
  ToolTip="Default ToggleButton Style" Margin="10,0,0,66" IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="26" />
        <Label Content="Удалять другой язык" HorizontalAlignment="Left" Margin="55,0,0,66" VerticalAlignment="Bottom" Height="26"/>
    </Grid>

</Window>
